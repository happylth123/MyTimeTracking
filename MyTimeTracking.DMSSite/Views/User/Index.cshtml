@using MyTimeTracking.DMSSite.Models
@model MyTimeTracking.Infrastructures.PagedList<UserVM>

@{
     Layout = "~/Views/Shared/_Layout_List.cshtml";    
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="portlet-body">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        User Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Credit Cards
                    </th>
                    <th>
                        Edit
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            <a href="@Url.Action("index", "CreditCard", new { bankid= item.ID, @return = Request.RawUrl })">Credit Cards</a>
                        </td>
                        <td>

                            <a class="btn btn-default btn-xs" href="@Url.Action("Edit", new { id = item.ID })">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-default btn-xs delete" href="@Url.Action("Delete", new { id = item.ID })">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
    @Html.Partial("_Pagination", Model)
</div>